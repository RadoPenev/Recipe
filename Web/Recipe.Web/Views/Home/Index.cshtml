@using Recipe.Common
@model Recipe.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center row">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <div class="col-md-8">
        <div class="row">
        @foreach (var item in this.Model.RandomRecipes)
        {
            <div class="card col-md-6" style="width: 18rem;">
                <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.CategoryName</p>
                    <a asp-controller="Recipes" asp-action="ById" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                </div>
            </div>
        }
        </div>
    </div>
    <div class="col-md-4 offset-md-4">
    <p>We have:</p>
    <ul class="list-group">
        <li class="list-group-item bg-info">Recipes: @Model.RecipiesCount</li>
        <li class="list-group-item bg-light">Ingredients: @Model.IngredientsCount</li>
        <li class="list-group-item bg-primary">Categories: @Model.RecipiesCount</li>
        <li class="list-group-item bg-secondary">Images: @Model.ImagesCount</li>
    </ul>
    </div>
</div>
