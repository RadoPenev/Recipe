@model Recipe.Web.ViewModels.RecipesController.ListViewModel
@{
    ViewData["Title"] = "Search result";
}

<h1>@ViewData["Titlw"]</h1>

@if (!Model.Recipes.Any())
{
    <p>Not Found..</p>
}

<div class="row">
    @foreach (var item in Model.Recipes)
    {
        <div class="card col-md-3" style="width: 18rem;">
            <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.CategoryName</p>
                <a asp-controller="Recipes" asp-action="ById" asp-route-id="@item.Id" class="btn btn-primary">View</a>
            </div>
        </div>
    }
</div>